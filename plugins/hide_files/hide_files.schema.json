{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "files": {
      "type": "object",
      "properties": {
        "hide_files": {
          "type": "object",
          "required": [
            "pattern"
          ],
          "properties": {
            "pattern": {
              "type": "string",
              "description": "A regular expression pattern for hiding files.",
              "example": "^todo.md$"
            }
          }
        }
      }
    }
  }
}
}
